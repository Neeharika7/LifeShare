<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_postblood"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.microsoft.bvrith.lifeshare.postblood">

    <TextView
        android:text="POST BLOOD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:id="@+id/postblood"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/bloodgrp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="73dp"
        android:id="@+id/qty"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Enter quantity in ml"
        android:textSize="24sp" />

    <TextView
        android:text="Blood Group : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/bloodgrp"
        android:textSize="24sp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/postblood"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="POST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:id="@+id/post"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:background="@color/colorPrimary" />

    <TextView
        android:text="B-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pbg"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:layout_above="@+id/qty"
        android:layout_toRightOf="@+id/post"
        android:layout_toEndOf="@+id/post" />
</RelativeLayout>
