<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guestlobb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.microsoft.bvrith.lifeshare.guestlobb">

    <TextView
        android:text="LIST OF BLOOD BANKS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:id="@+id/lobb"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary" />

    <Button
        android:text="Find Blood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/findblood"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Chiranjeevi Blood Bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lobb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:id="@+id/chiru"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <TextView
        android:text="Mother Teresa Blood Bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:id="@+id/motherteresa"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/chiru"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp" />

</RelativeLayout>
